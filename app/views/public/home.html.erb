<section class="courses">
  <div class="normal-container">
    <h3>¡Este idioma es especialmente para ti!</h3>
    <p class="tagline">Puedes acceder a este curso con Tarjeta (crédito o débito) y Depósito (Agente BCP).</p>

    <div class="flex-container">

      <% @courses.each do |course| %>
        <article class="course">
          <%= link_to course_path(course) do %>
          <% if course.professors.first %>
          <div class="professor-hover">
            <div class="professor-hover-content">
              <figure>
                <img src="<%= course.professors.first.image_url %>" alt="">
              </figure>
              <h5><%= course.professors.first.name %></h5>
              <p class="tagline"><%= course.professors.first.minibio %></p>
            </div>
          </div>
          <% end %>
          <div class="course-image">
            <%= image_tag(course.background_url) %>
          </div>
          <div class="course-title">
            <h4><%= course.title %></h4>
          </div>
          <div class="course-details">
            <div class="course-time">
              <i class="fa fa-clock-o" aria-hidden="true"></i>
              <span><%= course.duration %></span>
            </div>
            <div class="course-price">
              <% if course.free %>
                <span>Gratis</span>
              <% else %>
                <span>S/ <%= course.pricetag.round %></span>
              <% end %>
            </div>
            <div class="course-discount">
              <% if (course.discount != 0) && course.discount %>
                <span>S/ <%= course.discount.round %></span>
              <% end %>
            </div>
          </div>
          <% end %>
        </article>
      <% end %>
    </div>
  </div>

  <%= link_to "/cursos" do %>
  <button>Más cursos...</button>
  <% end %>
</section>

