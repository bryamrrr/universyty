<% content_for :body_class, 'public-instructor' %>
<section class="main-home">
  <div class="main-title">
    <div class="title">
      <h2>Comparte con el mundo</h2>
      <div id="typed-strings">
        <p>tu pasión</p>
        <p>tu talento</p>
